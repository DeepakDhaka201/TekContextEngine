# SCIP Configuration
SCIP_TIMEOUT_SECONDS=1800
TREE_SITTER_TIMEOUT_SECONDS=300
SCIP_TYPESCRIPT_PATH=/usr/local/bin/scip-typescript
SCIP_JAVA_PATH=/usr/local/bin/scip-java

# Git Configuration
GIT_CLONE_TIMEOUT=600000
GIT_PULL_TIMEOUT=300000