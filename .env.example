# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=tekaicontextengine
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=development
PORT=3000
APP_BASE_URL=http://localhost:3000

# GitLab Configuration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token_here

# Worker Pool Configuration
WORKER_POOL_SYNC_SIZE=2
WORKER_POOL_CHUNKING_SIZE=8
WORKER_POOL_INDEXING_SIZE=6
WORKER_POOL_TREE_SITTER_SIZE=6
WORKER_POOL_DOC_CHUNKING_SIZE=4
WORKER_POOL_SCIP_SIZE=3
WORKER_POOL_TREE_SITTER_INDEX_SIZE=6

# Task Configuration
